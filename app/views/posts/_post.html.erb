<tr>
  <td>
    <%= link_to post.body, post_path(post), class: 'text-body' %>
  </td>
  <td>
    <%= post.user.name %>
  </td>
  <td>
    <%= l post.created_at, format: :long %>
  </td>
  <td>
    <% if current_user.own?(post) %>  
      <%= link_to t('defaults.edit'), edit_post_path(post), class: 'btn btn-success' %>
      <%= link_to t('defaults.delete'), post_path(post), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
    <% end %>
  </td>
</tr>