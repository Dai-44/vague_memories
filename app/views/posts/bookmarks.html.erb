<% content_for(:title, t('.title')) %>
<div class="container mb-5 pt-2">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-12"> 
      <div class="row d-flex justify-content-end mb-3">
        <div class="col-md-2">
          <%= link_to "一覧へ", posts_path, class: "btn btn-success" %>
        </div>
        <div class="col-md-3">
          <%= button_tag "思い出フィルターを外す", class: "btn btn-danger", onclick: "window.location.reload();" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col", style="width: 60%"><%= Post.human_attribute_name(:body) %></th>
          <th scope="col", style="width: 15%"><%= Post.human_attribute_name(:user) %></th>
          <th scope="col", style="width: 10%"><%= Post.human_attribute_name(:created_at) %></th>
          <th scope="col", style="width: 15%"></th>
        </thead>
        <tbody>
        <% if @bookmark_posts.present? %>
          <%= render @bookmark_posts %>
        <% else%>
          <%= t '.no_result'%>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <!-- ページネーション -->
      <%= paginate @bookmark_posts %>
    </div>
  </div>
</div>
