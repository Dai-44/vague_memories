<% content_for(:title, t('.title')) %>
<div class="container mb-5 pt-2">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-12"> 
      <div class="row d-flex justify-content-end mb-3">
        <div class="col-md-2">
          <%= button_tag "補正を外す", class: "btn btn-danger", onclick: "window.location.reload();" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col"><%= Post.human_attribute_name(:body) %></th>
          <th scope="col"><%= Post.human_attribute_name(:user) %></th>
          <th scope="col"><%= Post.human_attribute_name(:created_at) %></th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <%= render @posts %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <!-- ページネーション -->
      <%= paginate @posts %>
    </div>
  </div>
</div>
