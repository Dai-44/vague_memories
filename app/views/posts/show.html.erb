<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-9'>
              <p><%= simple_format(@post.body) %></p>
              <%#= render 'crud_menus', board: @board if current_user.own?(@board) %>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "posted by #{@post.user.name}" %></li>
                <li class="list-inline-item"><%= l @post.created_at, format: :long %></li>
              </ul>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>

  <%#= render 'comments/form', {board: @board, comment: @comment} %>

  <%#= render 'comments/comments', {comments: @comments} %>
</div>